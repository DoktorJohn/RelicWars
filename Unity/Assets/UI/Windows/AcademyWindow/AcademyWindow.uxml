<?xml version="1.0" encoding="utf-8"?>
<ui:UXML xmlns:ui="UnityEngine.UIElements" editor-extension-mode="False">
    <ui:Style src="AcademyWindow.uss" />

    <ui:VisualElement name="Academy-Window-Overlay" picking-mode="Ignore" class="window-overlay">
        <ui:VisualElement name="Academy-Window-MainContainer" class="window-container">
            
            <ui:VisualElement name="Academy-Window-Header" class="window-header">
                <ui:Label name="Lbl-Title" class="window-title" text="ACADEMY" />
            </ui:VisualElement>
            
            <ui:Label name="Lbl-Level" class="level-subtitle" text="Level ..." />
            
            <ui:Label class="flavor-text" text="The seat of knowledge. Expand the Academy to unlock new technologies and improve your civilization's efficiency." />
            
            <ui:VisualElement class="divider" />

            <ui:VisualElement class="table-container">
                <ui:VisualElement class="table-header-row">
                    <ui:Label text="LEVEL" class="table-header-label" />
                    <ui:Label text="STATUS" class="table-header-label" />
                </ui:VisualElement>

                <ui:ScrollView name="Academy-Stats-List" />
            </ui:VisualElement>

            <ui:Button name="Common-Close-Button" class="close-button" text="CLOSE" />
            
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>